pipeline {
    agent any

    environment {
        // Load variables from .env file
        ENV_FILE = '.env'
    }

    stages {
        stage('Checkout') {
            steps {
                // Clone repository dari Git
                git branch: 'main', url: 'https://github.com/g3n1k/hello_cargo.git'
            }
        }

        stage('Build Docker Image') {
            steps {
                script {
                    // Build Docker Image
                    sh 'docker build -t my-rust-app .'
                }
            }
        }

        stage('Run Tests') {
            steps {
                script {
                    // Jalankan container untuk test
                    sh 'docker run --rm my-rust-app my_app'
                }
            }
        }

        stage('Push Docker Image') {
            steps {
                withCredentials([usernamePassword(credentialsId: 'docker-hub-creds', 
                    usernameVariable: 'DOCKER_USER', passwordVariable: 'DOCKER_PASS')]) {
                    script {
                        // Login ke Docker Hub
                        sh 'echo $DOCKER_PASS | docker login -u $DOCKER_USER --password-stdin'
                        
                        // Tag dan push image
                        sh 'docker tag my-rust-app username/my-rust-app:latest'
                        sh 'docker push username/my-rust-app:latest'
                    }
                }
            }
        }
    }

    post {
        success {
            echo 'Build and push completed successfully!'
        }
        failure {
            echo 'Build or push failed!'
        }
    }
}
